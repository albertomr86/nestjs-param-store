{
  "name": "nestjs-param-store",
  "version": "1.2.0",
  "description": "Configure your NestJS application with AWS Parameter Store",
  "author": "Alberto Menendez Romero <albertomr86@gmail.com>",
  "keywords": [
    "nestjs",
    "nest.js",
    "parameter store",
    "parameter-store",
    "ssm",
    "config",
    "configuration",
    "aws",
    "amazon web services"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">= 16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/albertomr86/nestjs-param-store.git"
  },
  "bugs": {
    "url": "https://github.com/albertomr86/nestjs-param-store/issues"
  },
  "homepage": "https://github.com/albertomr86/nestjs-param-store/issues#readme",
  "scripts": {
    "lint": "eslint \"lib/**/*.ts\"",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"lib/**/*.ts\"",
    "test": "jest --verbose -i --detectOpenHandles --coverage"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/common": "^9.0.5",
    "@nestjs/core": "^9.0.5",
    "@nestjs/platform-express": "^9.0.5",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "aws-sdk-client-mock": "^3.0.0",
    "aws-sdk-client-mock-jest": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "tslint": "^6.0.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "@aws-sdk/client-ssm": "^3.163.0",
    "@nestjs/common": "^8.0.0 || ^9.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
